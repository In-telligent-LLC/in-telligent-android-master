<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        app:layout_constraintStart_toStartOf="parent"/>

      <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"
        app:layout_constraintStart_toEndOf="parent"/>


      <ImageView
        android:id="@+id/contact_message_back_button"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_margin="10dp"
        android:src="@drawable/left_arrow_new"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

      <TextView
        android:id="@+id/contact_message_back_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/back"
        android:textAllCaps="true"
        android:textColor="@color/translate_button_black"
        app:layout_constraintBottom_toBottomOf="@+id/contact_message_back_button"
        app:layout_constraintStart_toEndOf="@+id/contact_message_back_button"
        app:layout_constraintTop_toTopOf="@+id/contact_message_back_button"/>

      <TextView
        android:id="@+id/contact_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/contact"
        android:textColor="@color/gray2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_message_back_button"
        />

      <EditText
        android:id="@+id/contact_send_title_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_send_message"
        android:hint="@string/enter_title_italic"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@+id/contact_title_text"/>

      <EditText
        android:id="@+id/contact_send_message_edittext"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_send_message"
        android:gravity="start"
        android:hint="@string/enter_message_italic"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/required_enter_title"/>

      <ProgressBar
          android:id="@+id/contact_send_attachment_progress_bar"
          style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
          android:layout_width="0dp"
          android:layout_height="3dp"
          android:progressDrawable="@drawable/green_progress_bar_drawable"
          android:visibility="visible"
          app:layout_constraintBottom_toTopOf="@+id/contact_send_attachment_layout"
          app:layout_constraintEnd_toEndOf="@+id/contact_send_attachment_layout"
          app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintStart_toStartOf="@+id/contact_send_attachment_layout"
          tools:progress="50" />

      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/contact_send_attachment_layout"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:background="@drawable/edittext_send_message"
          android:padding="@dimen/spacing_small"
          app:layout_constraintEnd_toEndOf="@id/guideline_right"
          app:layout_constraintStart_toStartOf="@id/guideline_left"
          app:layout_constraintTop_toBottomOf="@id/required_enter_message">

        <ImageView
            android:id="@+id/contact_send_message_attachment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_attachment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/contact_send_attachment_text" />

        <TextView
            android:id="@+id/contact_send_attachment_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/contact_send_message_attachment_icon"
            android:background="@drawable/edittext_send_message"
            android:text="@string/add_attachment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/contact_send_message_attachment_icon"
            app:layout_constraintTop_toBottomOf="@+id/contact_send_attachment_progress_bar"
            tools:ignore="NotSibling" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <RelativeLayout
        android:id="@+id/contact_alert_spinner_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_send_message"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@+id/contact_send_attachment_layout">

        <com.sca.in_telligent.util.MySpinner
            android:id="@+id/contact_alert_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

      </RelativeLayout>


      <RelativeLayout
        android:id="@+id/contact_send_spinner_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_send_message"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@+id/required_alert_type">

        <com.sca.in_telligent.util.MySpinner
            android:id="@+id/contact_send_to_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

      </RelativeLayout>


      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/contact_send_message_button"
        android:layout_marginBottom="10dp"
        android:background="@drawable/contact_send_message_background"
        android:text="@string/send_message"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@+id/required_send_to"/>

      <include
        android:id="@+id/required_alert_type"
        layout="@layout/field_required_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/contact_alert_spinner_layout"
        ></include>

      <include
        android:id="@+id/required_send_to"
        layout="@layout/field_required_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/contact_send_spinner_layout"
        ></include>

      <include
        android:id="@+id/required_enter_title"
        layout="@layout/field_required_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/contact_send_title_edittext"
        ></include>

      <include
        android:id="@+id/required_enter_message"
        layout="@layout/field_required_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/contact_send_message_edittext"
        ></include>

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>